{
  "env": {
    "MAX_THINKING_TOKENS": "10000"
  },
  "permissions": {
    "allow": [
      "Read(~/.zshrc)",
      "git show *",
      "git log *"
    ],
    "deny": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(sudo:*)",
      "Read(.env)",
      "Read(.env.*)",
      "Bash(git config:*)",
      "Bash(chmod 777:*)",
      "Bash(rm -rf /:*)",
      "Bash(gh repo delete:*)"
    ],
    "ask": [
      "Bash(git push:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/deny-check.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/completion-notification.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/notification.sh"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true
}
